<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/colorFill"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_above="@+id/titile"
        android:layout_width="165dp"
        android:layout_height="165dp"
        app:lottie_fileName="GroupChat.json"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:scaleType="centerCrop"
        app:lottie_loop="true"
        app:lottie_autoPlay="true" />
    <TextView
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/Lbl_Title_page2"
        android:id="@+id/titile"
        android:textColor="#FA5A7B"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/wowonder"
        android:textStyle="bold" />
    <TextView
        android:layout_below="@+id/titile"
        android:fontFamily="@font/wowonder"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/Lbl_Description_page2"
        android:id="@+id/subtitile"
        android:textSize="17dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp" />

  <ImageView
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="110dp"
        android:layout_marginStart="30dp"
        android:rotation="20"
        android:alpha="0.2"
        android:tint="#FA5A7B"
        android:src="@drawable/ic_place_vector"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:rotation="20"
        android:alpha="0.2"
        android:tint="#FA5A7B"
        android:src="@drawable/icon_mail_vector"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <ImageView
        android:layout_below="@+id/subtitile"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="30dp"
        android:rotation="20"
        android:alpha="0.2"
        android:tint="#FA5A7B"
        android:src="@drawable/icon_phone_vector"
        android:layout_width="35dp"
        android:layout_height="35dp" />
    <ImageView
        android:layout_below="@+id/subtitile"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:rotation="-20"
        android:alpha="0.2"
        android:tint="#FA5A7B"
        android:src="@drawable/icon_video_camera_vector"
        android:layout_width="35dp"
        android:layout_height="35dp" />
    <ImageView
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:rotation="20"
        android:alpha="0.2"
        android:tint="#FA5A7B"
        android:src="@drawable/ic_image_vector"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <ImageView
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginStart="100dp"
        android:rotation="-15"
        android:alpha="0.2"
        android:tint="#FA5A7B"
        android:src="@drawable/ic_sticker_vector"
        android:layout_width="40dp"
        android:layout_height="40dp" />
</RelativeLayout>