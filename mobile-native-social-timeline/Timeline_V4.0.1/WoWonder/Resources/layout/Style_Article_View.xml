<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainliner_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:background="@drawable/center_content_profile_scroll_over"
    android:layout_marginTop="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="15dp"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/Image_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/Image"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:minHeight="160dp"
            android:focusable="false"
            android:clickable="false"
            android:src="@drawable/ImagePlacholder"
            android:focusableInTouchMode="false"
            app:riv_corner_radius_top_left="4dp"
            app:riv_corner_radius_top_right="4dp"/>
        <TextView
            android:id="@+id/Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/textLight_color"
            android:textSize="12dp"
			android:ellipsize="none"
            android:textStyle="normal"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="6dp"
			android:layout_marginStart="5dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:focusable="false"
            android:clickable="false"
            android:background="@drawable/shape_radius_btn" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:orientation="vertical"
        android:padding="10dp"
        android:focusable="false">
        
        <TextView
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginEnd="3dp"
            android:textSize="16sp"
            android:textColor="@color/gnt_black"/>
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="none"
            android:maxLines="2"
            android:textColor="@color/colorCommentText"
            android:textSize="14sp"/>
        <RelativeLayout
			android:id="@+id/UserItem_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/UserImageProfile"
                android:scaleType="centerCrop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/no_profile_image_circle"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp" />
            <TextView
                android:id="@+id/Username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp" 
                android:layout_marginTop="9dp"
                android:drawablePadding="4dp"
                android:layout_toEndOf="@id/UserImageProfile"
                android:textColor="@color/accent"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/card_dist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Username"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/UserImageProfile"
                android:textSize="12sp"/>
        </RelativeLayout> 
        <TextView 
            android:id="@+id/View_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:lines="1"
            android:text="@string/Lbl_ReadMore"
            android:textColor="@color/accent"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:focusable="false"
            android:clickable="false" 
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
