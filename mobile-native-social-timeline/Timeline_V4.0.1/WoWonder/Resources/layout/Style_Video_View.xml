<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="false"
    android:focusable="false"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:layout_marginTop="5dp"
    android:paddingTop="1dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview2"
        android:layout_gravity="fill"
        android:layout_width="139dp"
        android:layout_height="85dp"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="0dp"
        app:cardElevation="0dp">
        <RelativeLayout
            android:id="@+id/Image_container"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/Imagevideo"
                android:scaleType="centerCrop"
                android:layout_width="139dp"
                android:layout_height="85dp"
                android:focusable="false"
                android:clickable="false"
                android:src="@drawable/ImagePlacholder"
                android:focusableInTouchMode="false" />
          <TextView
                android:id="@+id/videoType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textColor="#ffff"
                android:textSize="12dp"
                android:visibility="invisible"
                android:textStyle="normal"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp" 
                android:focusable="false"
                android:clickable="false"
                android:background="@drawable/ThirdpartyRoundText"
                android:backgroundTint="#6441A4" />
            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="12dp"
                android:textStyle="normal"
                android:layout_marginEnd="5dp"
                android:focusable="false"
                android:clickable="false"
                android:textColor="#ffff"
                android:layout_alignParentBottom="true"
                android:translationY="-3dp"
                android:background="@xml/rounded_corner_time" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_toEndOf="@+id/cardview2"
        android:id="@+id/info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:orientation="vertical"
        android:paddingStart="0dp"
        android:paddingEnd="7dp"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="10dp"
        android:focusable="false"
        android:layout_gravity="center_horizontal"
        android:layout_weight="3">
        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="13dp" />
        <TextView
          android:id="@+id/description"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="none"
          android:lines="2"
          android:textSize="12dp"
          android:layout_marginTop="5dp" />
        <TextView
            android:id="@+id/Views_Count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:lines="1"
            android:textSize="13dp"
            android:layout_marginTop="5dp"
            android:focusable="false"
            android:clickable="false" />
    </LinearLayout>
    <TextView
        android:layout_alignParentEnd="true"
        android:id="@+id/videoMenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="none"
        android:lines="1"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:textSize="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="6dp"
        android:text=":"
        android:layout_gravity="end"
        android:layout_weight="9"
        android:focusable="auto"
        android:clickable="true"
        android:gravity="center_vertical"
        android:enabled="true" />
</RelativeLayout>