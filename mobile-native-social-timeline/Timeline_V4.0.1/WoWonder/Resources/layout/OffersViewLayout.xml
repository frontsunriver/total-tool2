<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_container"
    android:background="?attr/colorFill"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:background="?attr/colorFill"
        app:elevation="1dp"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    app:layout_collapseMode="parallax"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/offerCoverImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="260dp"
                        android:minHeight="243dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/imageplacholder"
                        android:visibility="visible" />
                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="start"
                        android:layout_marginEnd="11dp"
                        android:layout_marginStart="11dp"
                        android:paddingBottom="16dp"
                        android:src="@drawable/ic_action_ic_back"
                        android:paddingTop="15dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Lbl_More"
                        android:layout_gravity="end"
                        android:textSize="17sp"
                        android:layout_alignParentEnd="true"
                        android:textStyle="bold"
                        android:textColor="@color/textLight_color"
                        android:padding="15dp"
                        android:visibility="gone"
                        android:layout_marginEnd="10dp"
                        android:id="@+id/toolbar_title" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"
                    android:layout_marginTop="0dp">
                    <View
                        android:background="@drawable/rounded_corner_from_top_shape"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="60dp" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_marginEnd="9dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="0dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:cardElevation="0dp"
                        card_view:cardCornerRadius="13dp">
                        <ImageView
                            android:id="@+id/offerAvatar"
                            android:scaleType="centerCrop"
                            android:layout_width="105dp"
                            android:layout_height="105dp"
                            android:layout_margin="6dp"
                            android:layout_gravity="center"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/imageplacholder_circle" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </RelativeLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/ScrollView"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:background="@xml/rounded_corner"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:translationY="0dp"
            android:layout_marginTop="0dp">
            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:paddingBottom="3dp"
                android:paddingStart="13dp"
                android:paddingEnd="10dp"
                android:paddingTop="0dp"
                android:textStyle="bold"
                android:textSize="18sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="-3dp">
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:layout_marginStart="11dp"
                    android:text="@string/Lbl_End_Date"
                    android:layout_gravity="center"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/dateNumber"
                    android:layout_marginStart="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date"
                    android:textSize="12dp" />
                <TextView
                    android:id="@+id/discount"
                    android:layout_below="@+id/dateNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:layout_marginStart="11dp"
                    android:text="@string/Lbl_Discount"
                    android:layout_gravity="center"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/discountNumber"
                    android:layout_marginStart="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/discount"
                    android:textSize="12dp" />
                <WoWonder.Library.Anjo.SuperTextLibrary.SuperTextView
                    android:layout_below="@+id/discountNumber"
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_alignParentBottom="true"
                    android:gravity="center|start"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="1dp"
                    android:paddingEnd="5dp"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:hyphenationFrequency="none"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>