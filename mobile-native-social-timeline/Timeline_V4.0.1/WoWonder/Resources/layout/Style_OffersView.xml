<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:focusable="true"
        android:clickable="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:paddingBottom="0dp"
        android:layout_marginBottom="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="?attr/colorFill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1.5dp"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image"
                android:maxHeight="165dp"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:minHeight="140dp"
                android:layout_marginBottom="0dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/Cover_image"
                android:layout_marginTop="0dp" />
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/textLight_color"
                android:textSize="13dp"
                android:ellipsize="none"
                android:text="@string/Lbl_Offer"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="6dp"
                android:paddingEnd="9dp"
                android:paddingStart="9dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:backgroundTint="#64C7FF"
                android:background="@drawable/shape_radius_btn"
                android:focusable="false"
                android:clickable="false"
                android:layout_alignParentTop="true" />
            <ImageView
                android:layout_below="@+id/image"
                android:id="@+id/blogIcon"
               
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_offer_cat_vector"
                android:layout_width="21dp"
                android:layout_height="21dp" />
            <TextView
                android:layout_toEndOf="@+id/blogIcon"
                android:layout_below="@+id/image"
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:paddingEnd="10dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="3dp"
                android:paddingTop="3dp"
                android:textStyle="bold"
                android:maxLines="2"
                android:inputType="textMultiLine"
                android:textSize="15sp" />
            <TextView
                android:layout_below="@+id/subtitle"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="6dp"
                android:paddingBottom="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="10dp"
                android:paddingTop="2dp"
                android:maxLines="3"
                android:textSize="12sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
