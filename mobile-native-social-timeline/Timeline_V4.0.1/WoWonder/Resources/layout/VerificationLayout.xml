<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBubble"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linear_gradient_drawable"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
                app:theme="@style/ToolbarTheme"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="top"
            app:layout_collapseMode="pin"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            android:background="@null"
            android:elevation="2dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Lbl_Verification"
                android:textSize="20sp"
                android:textColor="@color/textIcon"
                android:textStyle="bold" />
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textSize="16sp"
                android:id="@+id/textTitileVerified"
                android:text="@string/Lbl_Please_select_Image_passport"
                android:textColor="@color/textIcon" />
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="visible"
        android:background="?attr/colorBubble"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:id="@+id/notVerified"
            android:paddingBottom="55dp"
            android:background="?attr/colorBubble"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:paddingTop="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_marginEnd="5dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/ImageLayout"
                    android:layout_width="match_parent"
                    android:layout_weight="50"
                    android:ems="10"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/Image"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:focusable="false"
                        android:clickable="false"
                        android:gravity="center"
                        android:src="@drawable/ImagePlacholder"
                        android:layout_centerVertical="false" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:id="@+id/btn_AddPhoto"
                        android:textSize="12sp"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_below="@+id/Image"
                        android:background="@drawable/follow_button_profile_friends"
                        android:tag="false"
                        android:paddingStart="17dp"
                        android:paddingEnd="17dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textAllCaps="false"
                        android:text="@string/Lbl_YourPhoto"
                        android:textColor="@color/accent"
                        android:layout_marginTop="7dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ImagePassportLayout"
                    android:layout_width="match_parent"
                    android:layout_weight="50"
                    android:ems="10"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/ImagePassport"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:focusable="false"
                        android:clickable="false"
                        android:gravity="center"
                        android:src="@drawable/ImagePlacholder"
                        android:layout_centerVertical="false" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:id="@+id/btn_Passport"
                        android:textSize="12sp"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_below="@+id/ImagePassport"
                        android:background="@drawable/follow_button_profile_friends"
                        android:tag="false"
                        android:paddingStart="17dp"
                        android:paddingEnd="17dp"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:text="@string/Lbl_Passport"
                        android:textColor="@color/accent"
                        android:layout_marginTop="7dp" />
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textSize="15sp"
                android:text="@string/Lbl_Please_add_info" />
            <View
                android:layout_width="0dp"
                android:layout_height="15dp" />
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/Name_text"
                    style="@style/EditTextNormalStyle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/EditTextStyleOne"
                    android:hint="@string/Lbl_Name"
                    android:inputType="textEmailAddress"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:maxLines="1"
                    android:layout_margin="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp" />
                <EditText
                    android:id="@+id/Messages_Edit"
                    style="@style/EditTextNormalStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:gravity="top"
                    android:background="@drawable/EditTextStyleOne"
                    android:hint="@string/Lbl_Message"
                    android:inputType="textMultiLine"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:layout_margin="5dp"
                    android:maxHeight="150dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp" />
            </LinearLayout>
            <Button
                android:background="@xml/button_bg_secound"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:padding="14dp" 
                android:text="@string/Lbl_SubmitRequest"
                android:textColor="@color/textIcon"
                android:textSize="15sp"
                android:layout_gravity="bottom|center"
                android:gravity="center"
                android:clickable="true"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:id="@+id/submitButton" />
            <View
                android:layout_width="0dp"
                android:layout_height="30dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="30dp"
        android:id="@+id/verified"
        android:background="?attr/colorPrimary"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/verifiedIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="100sp"
            android:text="Ic" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:textSize="15sp"
            android:text="@string/Lbl_Congratulations_verified" />
    </LinearLayout>
</LinearLayout>