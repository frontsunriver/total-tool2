<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorBubble"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_ptwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="false"
        app:statusBarScrim="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- set toolbar with collapsing effect -->
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill_vertical"
        android:layout_marginBottom="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                app:theme="@style/ToolbarTheme"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:titleTextAppearance="@style/Toolbar.TitleText"
                    android:background="?attr/colorFill">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Lbl_Add"
                        android:layout_gravity="end"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/textLight_color"
                        android:padding="15dp"
                        android:layout_marginEnd="10dp"
                        android:id="@+id/toolbar_title" />
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.AppBarLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:paddingBottom="1dp">
                <ImageView
                    android:id="@+id/EventCover"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:src="@drawable/Cover_image"
                    android:scaleType="centerCrop" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@xml/gradientblack"
                    android:gravity="center">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:id="@+id/btn_selectimage"
                        android:textSize="12sp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:background="@drawable/follow_button_profile_friends"
                        android:tag="false"
                        android:paddingStart="17dp"
                        android:paddingEnd="17dp"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:text="@string/Lbl_SelectImage"
                        android:textColor="@color/textLight_color"
                        android:layout_marginTop="7dp"
                        android:gravity="center"
                        android:layout_gravity="center|center_vertical" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?attr/colorFill"
                android:paddingBottom="20dp">
                <!--Buttons Section-->
                <LinearLayout
                    android:id="@+id/layout_suggestion_Friends"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="10dp"
                    android:background="?attr/colorFill"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/eventname"
                        android:layout_below="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="8dp"
                        android:inputType="textCapWords"
                        android:background="@drawable/create_border_edit_text"
                        android:hint="@string/Lbl_Event_Name"
                        android:padding="12dp"
                        android:textColorHint="#b7b7b7"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        app:statusBarScrim="?attr/colorBubble"
                        android:foregroundGravity="center|center_horizontal"
                        android:gravity="center|start">
                        <TextView
                            android:id="@+id/StartIcondate"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:text="T"
                            android:textSize="20sp"
                            android:layout_gravity="start|center"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:foregroundGravity="center"
                            android:gravity="center" />
                        <EditText
                            android:id="@+id/StartDateTextview"
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:layout_marginStart="14dp"
                            android:textColorHint="#b7b7b7"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/create_border_edit_text"
                            android:textSize="13sp"
                            android:padding="10dp"
                            android:editable="false"
                            android:clickable="true"
                            android:focusable="false"
                            android:layout_weight="15"
                            android:hint="@string/Lbl_Start_Date"
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical|start"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="0dp"
                            android:includeFontPadding="false" />
                        <EditText
                            android:id="@+id/StartTimeTextview"
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:layout_marginStart="14dp"
                            android:padding="10dp"
                            android:textSize="13sp"
                            android:layout_weight="15"
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical|start"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="0dp"
                            android:hint="00:00"
                            android:clickable="true"
                            android:editable="false"
                            android:focusable="false"
                            android:textColorHint="#b7b7b7"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/create_border_edit_text"
                            android:includeFontPadding="false" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:statusBarScrim="?attr/colorBubble"
                        android:foregroundGravity="center|center_horizontal"
                        android:gravity="center|start">
                        <TextView
                            android:id="@+id/EndIcondate"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:text="T"
                            android:textSize="20sp"
                            android:layout_gravity="start|center"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:foregroundGravity="center"
                            android:gravity="center" />
                        <EditText
                            android:id="@+id/EndDateTextview"
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:layout_marginStart="14dp"
                            android:textColorHint="#b7b7b7"
                            android:editable="false"
                            android:clickable="true"
                            android:focusable="false"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/create_border_edit_text"
                            android:textSize="13sp"
                            android:padding="10dp"
                            android:layout_weight="15"
                            android:hint="@string/Lbl_End_Date"
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical|start"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="0dp"
                            android:includeFontPadding="false" />
                        <EditText
                            android:id="@+id/EndTimeTextview"
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:layout_marginStart="14dp"
                            android:padding="10dp"
                            android:textSize="13sp"
                            android:layout_weight="15"
                            android:clickable="true"
                            android:editable="false"
                            android:focusable="false"
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical|start"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="0dp"
                            android:hint="00:00"
                            android:textColorHint="#b7b7b7"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/create_border_edit_text"
                            android:includeFontPadding="false" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:statusBarScrim="?attr/colorPrimary"
                        android:layout_marginTop="8dp"
                        android:foregroundGravity="center|center_horizontal"
                        android:gravity="center|start">
                        <TextView
                            android:id="@+id/IconLocation"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:text="T"
                            android:textSize="20sp"
                            android:textColor="#f35d4d"
                            android:layout_gravity="start|center"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:foregroundGravity="center"
                            android:gravity="center" />
                        <EditText
                            android:id="@+id/LocationTextview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:hint="@string/Lbl_Location"
                            android:textSize="14sp"
                            android:layout_weight="15"
                            android:padding="10dp"
                            android:maxLines="5"
                            android:textAllCaps="false"
                            android:inputType="textCapWords|textMultiLine"
                            android:background="@drawable/create_border_edit_text"
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical|start"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="0dp"
                            android:textColorHint="#b7b7b7"
                            android:includeFontPadding="false" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="0dp"
                    android:paddingBottom="0dp"
                    android:background="?attr/colorFill"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="122.3dp"
                        android:layout_below="@+id/emailet"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/create_border_edit_text"
                        android:hint="@string/Lbl_Description"
                        android:scrollHorizontally="false"
                        android:maxLines="10"
                        android:textAllCaps="false"
                        android:inputType="textCapWords|textMultiLine"
                        android:padding="12dp"
                        android:textColorHint="#b7b7b7"
                        android:textSize="14sp"
                        android:gravity="top" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_height="?android:attr/actionBarSize"
                android:layout_width="match_parent" />

            <com.google.android.gms.ads.doubleclick.PublisherAdView
	            android:id="@+id/multiple_ad_sizes_view"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="true"
	            android:layout_centerHorizontal="true"
	            app:adSize="MEDIUM_RECTANGLE,120x20,250x250,320x100,SMART_BANNER"
	            app:adUnitId="@string/banner_multiple_ad_sizes_id" />
              
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>